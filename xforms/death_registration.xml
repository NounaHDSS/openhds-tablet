      <bind jr:preload="timestamp" jr:preloadParams="start" nodeset="/death_registration/start" readonly="true()" required="true()" type="dateTime"/>
      <bind jr:preload="timestamp" jr:preloadParams="end" nodeset="/death_registration/end" readonly="true()" required="true()" type="dateTime"/>
      <bind jr:preload="property" jr:preloadParams="deviceid" nodeset="/death_registration/deviceid" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/death_registration/openhds" required="true()"/>
      <bind nodeset="/death_registration/openhds/fieldWorkerId" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/death_registration/openhds/visitId" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/death_registration/openhds/individualId" readonly="true()" required="true()" type="string"/>
      <bind nodeset="/death_registration/openhds/firstName" readonly="true()" type="string"/>
      <bind nodeset="/death_registration/openhds/lastName" readonly="true()" type="string"/>
      <bind constraint=". &lt; today()" jr:constraintMsg="Date of death can not be in the future" nodeset="/death_registration/dateOfDeath" required="true()" type="date"/>
      <bind nodeset="/death_registration/diagnoseddeath" required="true()" type="select1"/>
      <bind nodeset="/death_registration/whom" relevant="selected( /death_registration/diagnoseddeath , '1')" required="true()" type="select1"/>
      <bind nodeset="/death_registration/causeofdeathdiagnosed" relevant="selected( /death_registration/diagnoseddeath , '1')" required="true()" type="select1"/>
      <bind nodeset="/death_registration/causofdeathnotdiagnosed" relevant="selected( /death_registration/diagnoseddeath , '2')" required="true()" type="select1"/>
      <bind nodeset="/death_registration/placeOfDeath" required="true()" type="select1"/>
      <bind nodeset="/death_registration/placeOfDeathOther" relevant="selected( /death_registration/placeOfDeath , 'OTHER')" required="true()" type="string"/>
      <bind calculate="concat( /death_registration/causeofdeathdiagnosed , /death_registration/causofdeathnotdiagnosed )" nodeset="/death_registration/causeOfDeath" readonly="true()" type="string"/>
      <bind nodeset="/death_registration/processedByMirth" readonly="true()" type="int"/>
      <bind calculate="concat('uuid:', uuid())" nodeset="/death_registration/meta/instanceID" readonly="true()" type="string"/>
    </model>
