      <instance>
        <death_registration id="death_registration">
          <start/>
          <end/>
          <deviceid/>
          <openhds>
            <fieldWorkerId/>
            <visitId/>
            <individualId/>
            <firstName/>
            <lastName/>
          </openhds>
          <dateOfDeath/>
          <diagnoseddeath/>
          <whom/>
          <causeofdeathdiagnosed/>
          <causofdeathnotdiagnosed/>
          <placeOfDeath/>
          <placeOfDeathOther/>
          <causeOfDeath/>
          <processedByMirth/>
          <meta>
            <instanceID/>
          </meta>
        </death_registration>
